package noiseychannel;

import java.util.ArrayList;

import noiseychannel.QueryLogWords.QueryLogWord;

public class IncorrectQueryLogWords {
	private ArrayList<IncorrectQueryLogWord> queryLogWords;
	
	public IncorrectQueryLogWords(){
		this.queryLogWords = new ArrayList<QueryLogWord>();
	}
	
	public ArrayList<QueryLogWord> getQueryLogWords(){
		return this.queryLogWords;
	}
	
	public void addQueryLogWord(String sessionId, int pos){
		this.queryLogWords.add(new IncorrectQueryLogWord(sessionId, pos));
	}
	
	
	public class IncorrectQueryLogWord{
		
		public String word;
		public int pos;
		
		public IncorrectQueryLogWord(String _word, int _pos){
			this.word = _word;
			this.pos = _pos;
		}
	}
}
