	private ArrayList<String> parseSentences(File file){
		BufferedReader reader = null;
		StringBuilder builder = new StringBuilder("");
		try {
			reader = new BufferedReader(new FileReader(file));
			String lineToken;
			while ((lineToken = reader.readLine()) != null){
				builder.append(lineToken + " ");
			}
			reader.close();
		} 
		catch (FileNotFoundException e) {

		}
		catch (IOException e) {

		}
		
		ArrayList<String> parsedSentences = new ArrayList<String>();
		String[] sentences = builder.toString().split(". ");
		for(String sentence : sentences){
			parsedSentences.add(sentence);
		}
	}
	
