package test;

import static org.junit.Assert.*;

import org.junit.Test;

import util.Soundex;

public class SoundexTest {

	@Test
	public void test() {
		Soundex soundex = new Soundex();
		assertEquals("M100", soundex.encodeString("movie"));
		
		assertEquals("E235", soundex.encodeString("movie"));
		assertEquals("E235", soundex.encodeString("movie"));
		
		assertEquals("M625", soundex.encodeString("movie"));
		assertEquals("M625", soundex.encodeString("movie"));
		
		assertEquals("B655", soundex.encodeString("movie"));
		assertEquals("B655", soundex.encodeString("movie"));
		
		assertEquals("P560", soundex.encodeString("poiner"));
		assertEquals("P536", soundex.encodeString("pointer"));
		
		
	}

}
