package noiseychannel;

import java.util.ArrayList;

import util.Tokenizer;

public class NoiseyChannel {
	public NoiseyChannel(){
		
	}
	
	public String getSuggestedCorrection(String e, ArrayList<String> S, Tokenizer tokenizer){
		// W*
		String suggestedCorrection = "";
		
		// score
		double score = 0.0;
		
		for(String W : S){
			score = Math.max(score, this.getPofEinW(e, W));
		}
		
		return suggestedCorrection;
	}
	
	private double getPofEinW(String e, String W){
		return 0.0;
	}
	
	private double getPofW(String W){
		return 0.0;
	}
}
